<!-- best practices inspired by "The Rails View" by John Athayde and Bruce Williams -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Base Title Placeholder | <%= yield(:title) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <!-- the following two conditional ie stylesheets are for formtastic -->
    <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>